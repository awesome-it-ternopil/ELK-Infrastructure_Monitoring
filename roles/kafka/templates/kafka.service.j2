[Unit]
Description=Apache Kafka Broker
Documentation=http://kafka.apache.org/documentation.html
Requires=network.target
After=network.target

[Service]
Type=simple
ExecStartPre=-/usr/bin/mkdir -p /var/log/kafka
ExecStart={{kafka.dirs.kafka_home}}/bin/kafka-server-start.sh {{kafka.dirs.kafka_home}}/config/server.properties
Restart=on-failure

[Install]
WantedBy=multi-user.target